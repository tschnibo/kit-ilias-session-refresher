{
  "applications": {
    "gecko": {
      "id": "kit-ilias-session-refresher@mondcarion.group"
    }
  },
  "name": "KIT Ilias Session Refresher",
  "author": "Alexander Linder",
  "version": "1.0",
  "description": "Automatically responds to session reminders by the Unibe Ilias system",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://ilias.unibe.ch/*"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": ["script.js"],
  "manifest_version": 2
}
